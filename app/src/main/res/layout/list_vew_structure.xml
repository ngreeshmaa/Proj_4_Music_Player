<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bdbdbd"
    android:padding="10dp">

    <ImageView
        android:id="@+id/music_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@string/music_image"
        tools:src="@drawable/dummy" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/music_image"
        android:textColor="@android:color/black"
        tools:text="Song Name" />

    <TextView
        android:id="@+id/song_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/music_image"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        tools:text="0:00"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/music_image"
        android:layout_alignStart="@id/song_name"
        android:textColor="@android:color/black"
        tools:text="Artist Name" />

</RelativeLayout>